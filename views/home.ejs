<section class="mb-10 overflow-hidden rounded-2xl border border-slate-200 bg-gradient-to-br from-brand-600/10 via-indigo-500/5 to-sky-500/10 p-8 dark:border-slate-700">
  <h1 class="text-4xl md:text-5xl font-extrabold tracking-tight mb-3">Agile Articles</h1>
  <p class="max-w-2xl text-slate-700 dark:text-slate-300">Ideas, stories, and practices to help modern teams ship better work. Curated essays and guides — not a knowledge base.</p>
  <div class="mt-6">
    <a href="#latest" class="inline-flex items-center gap-2 rounded-lg bg-brand-600 px-4 py-2 text-white shadow hover:bg-brand-700 focus:outline-none focus:ring-2 focus:ring-brand-400">
      Explore articles
      <svg class="h-4 w-4" viewBox="0 0 20 20" fill="currentColor">
        <path fill-rule="evenodd" d="M10.293 3.293a1 1 0 0 1 1.414 0l5 5a1 1 0 0 1 0 1.414l-5 5a1 1 0 1 1-1.414-1.414L13.586 11H4a1 1 0 1 1 0-2h9.586l-3.293-3.293a1 1 0 0 1 0-1.414Z" clip-rule="evenodd" />
      </svg>
    </a>
  </div>
</section>

<% if (typeof featured !== 'undefined' && featured) { %>
  <section class="mb-12">
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-8 items-stretch">
      <article class="rounded-2xl border border-slate-200 bg-white p-6 shadow-sm transition hover:shadow dark:border-slate-700 dark:bg-slate-900">
        <div class="flex items-center gap-3 text-xs text-slate-600 dark:text-slate-300">
          <% if (featured.date) { %>
            <time datetime="<%= new Date(featured.date).toISOString() %>"><%= new Date(featured.date).toLocaleDateString() %></time>
          <% } %>
          <% if (featured.tags && featured.tags.length) { %>
            <span aria-hidden="true">•</span>
            <div class="flex flex-wrap gap-1.5">
              <% featured.tags.slice(0, 3).forEach(tag => { %>
                <span class="inline-flex items-center rounded-full bg-slate-100 px-2 py-0.5 text-xs text-slate-700 dark:bg-slate-800 dark:text-slate-200"><%= tag %></span>
              <% }) %>
            </div>
          <% } %>
        </div>
        <h2 class="mt-3 text-2xl md:text-3xl font-bold leading-tight">
          <a class="hover:underline" href="/<%= featured.slug %>"><%= featured.title %></a>
        </h2>
        <% if (featured.description) { %>
          <p class="mt-3 text-slate-700 dark:text-slate-300"><%= featured.description %></p>
        <% } %>
        <div class="mt-5">
          <a href="/<%= featured.slug %>" class="inline-flex items-center gap-2 text-brand-700 hover:text-brand-600">
            Read the feature
            <svg class="h-4 w-4" viewBox="0 0 20 20" fill="currentColor">
              <path fill-rule="evenodd" d="M10.293 3.293a1 1 0 0 1 1.414 0l5 5a1 1 0 0 1 0 1.414l-5 5a1 1 0 1 1-1.414-1.414L13.586 11H4a1 1 0 1 1 0-2h9.586l-3.293-3.293a1 1 0 0 1 0-1.414Z" clip-rule="evenodd" />
            </svg>
          </a>
        </div>
      </article>

      <aside class="rounded-2xl border border-slate-200 bg-white p-6 dark:border-slate-700 dark:bg-slate-900">
        <h3 class="text-sm font-semibold text-slate-700 dark:text-slate-200">Trending tags</h3>
        <% if (trendingTags && trendingTags.length) { %>
          <div class="mt-3 flex flex-wrap gap-2">
            <% trendingTags.forEach(t => { %>
              <a href="#latest" class="inline-flex items-center gap-2 rounded-full border border-slate-300 bg-white px-3 py-1.5 text-xs text-slate-700 hover:bg-slate-50 dark:border-slate-600 dark:bg-slate-800 dark:text-slate-200">
                <span>#<%= t.tag %></span>
                <span class="text-slate-400">· <%= t.count %></span>
              </a>
            <% }) %>
          </div>
        <% } else { %>
          <p class="mt-2 text-sm text-slate-600 dark:text-slate-300">Tags will appear as you add more content.</p>
        <% } %>
      </aside>
    </div>
  </section>
<% } %>

<section id="latest" aria-labelledby="latest-heading">
  <div class="mb-4 flex items-center justify-between">
    <h2 id="latest-heading" class="text-xl font-bold">Latest</h2>
    <a href="/" class="text-sm text-slate-500 hover:text-slate-700 dark:text-slate-300 dark:hover:text-white">View all</a>
  </div>

  <% if (!(latest && latest.length) && !(typeof featured !== 'undefined' && featured)) { %>
    <div class="rounded-xl border border-dashed border-slate-300 bg-white p-8 text-center text-slate-600 dark:border-slate-700 dark:bg-slate-900 dark:text-slate-300">
      <p class="mb-2">No articles were found.</p>
      <p class="text-sm">Add .md files under <span class="font-mono bg-slate-100 px-1.5 py-0.5 rounded dark:bg-slate-800">./data/docs</span> and refresh.</p>
    </div>
  <% } else { %>
    <ul class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6">
      <% (latest || []).forEach(a => { %>
        <li class="group rounded-2xl border border-slate-200 bg-white p-6 shadow-sm transition hover:-translate-y-0.5 hover:shadow dark:border-slate-700 dark:bg-slate-900">
          <div class="flex items-center justify-between gap-4 text-xs text-slate-600 dark:text-slate-300">
            <% if (a.date) { %>
              <time datetime="<%= new Date(a.date).toISOString() %>"><%= new Date(a.date).toLocaleDateString() %></time>
            <% } %>
            <% if (a.tags && a.tags.length) { %>
              <div class="flex flex-wrap gap-1.5 justify-end">
                <% a.tags.slice(0, 3).forEach(tag => { %>
                  <span class="inline-flex items-center rounded-full bg-slate-100 px-2 py-0.5 text-xs text-slate-700 dark:bg-slate-800 dark:text-slate-200"><%= tag %></span>
                <% }) %>
              </div>
            <% } %>
          </div>
          <h3 class="mt-2 text-lg font-semibold leading-snug group-hover:text-brand-700">
            <a class="hover:underline" href="/<%= a.slug %>"><%= a.title %></a>
          </h3>
          <% if (a.description) { %>
            <p class="mt-3 text-sm text-slate-700 line-clamp-3 dark:text-slate-300"><%= a.description %></p>
          <% } %>
          <div class="mt-5">
            <a href="/<%= a.slug %>" class="inline-flex items-center gap-2 text-sm text-brand-700 hover:text-brand-600">
              Read more
              <svg class="h-4 w-4" viewBox="0 0 20 20" fill="currentColor">
                <path fill-rule="evenodd" d="M10.293 3.293a1 1 0 0 1 1.414 0l5 5a1 1 0 0 1 0 1.414l-5 5a1 1 0 1 1-1.414-1.414L13.586 11H4a1 1 0 1 1 0-2h9.586l-3.293-3.293a1 1 0 0 1 0-1.414Z" clip-rule="evenodd" />
              </svg>
            </a>
          </div>
        </li>
      <% }) %>
    </ul>
  <% } %>
</section>
